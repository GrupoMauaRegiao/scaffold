# http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

[*.php]
indent_size = 4

[*.coffee]
indent_size = 2

[*.js]
indent_size = 2

[*.html]
indent_size = 2

[*.sass]
indent_size = 2

[*.css]
indent_size = 2
